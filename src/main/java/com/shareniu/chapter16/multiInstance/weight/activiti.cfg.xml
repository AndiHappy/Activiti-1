<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
       http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean name="dataSource" class="com.alibaba.druid.pool.DruidDataSource">
		<property name="driverClassName">
			<value>com.mysql.jdbc.Driver</value>
		</property>
		<property name="url">
			<value>jdbc:mysql://127.0.0.1:3306/activiti?useUnicode=true&amp;characterEncoding=UTF-8
			</value>
		</property>
		<property name="username">
			<value>root</value>
		</property>
		<property name="password" value="" />
	</bean>
	<bean id="processEngineConfiguration"
		class="org.activiti.engine.impl.cfg.StandaloneProcessEngineConfiguration">
		<property name="history" value="audit" />
		<property name="databaseSchemaUpdate" value="true" />
		<property name="dataSource" ref="dataSource">
		</property>
		<property name="activityBehaviorFactory" ref="shareniuActivity" />
			<property name="customDefaultBpmnParseHandlers">
			<list>
				<bean  class="com.shareniu.chapter16.multiInstance.weight.ShareniuUserTaskParseHandler"></bean>
			</list>
		</property>
	</bean>
	<bean id="shareniuActivity" class="com.shareniu.chapter16.multiInstance.weight.ShareniuActivityBehaviorFactory" />
</beans>